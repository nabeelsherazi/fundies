#reader(lib "htdp-beginner-reader.ss" "lang")((modname |dot interact|) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
(require 2htdp/universe)
(require 2htdp/image)

(define BACKGROUND (empty-scene 500 500))
(define DOT (circle 3 "solid" "red"))

(define (main y)
  (big-bang y  ;; initialize big bang at state y
    [on-tick sub1]  ;; on tick subtract 1 from state
    [stop-when zero?]
    [to-draw place-dot-at]
    [on-key stop]))

(define (place-dot-at y) (place-image DOT 50 y BACKGROUND))

(define (stop y ke) 0)